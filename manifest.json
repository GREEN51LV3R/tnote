{
    "manifest_version": 3,
    "name": "T-note",
    "version": "0.0.1",
    "description": "A simple note extension to store and organize your notes.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "permissions": [
        "clipboardWrite",
        "storage"
    ]
}